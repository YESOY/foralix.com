RewriteEngine On

# HTTPS et suppression WWW
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.foralix\.com [NC]
RewriteRule ^(.*)$ https://foralix.com/$1 [R=301,L]

# Redirige toutes les majuscules vers minuscules
RewriteCond %{REQUEST_URI} [A-Z]
RewriteRule (.*) ${tolower:$1} [R=301,L]

# Ajoute .html aux URLs sans extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# Redirige index vers racine
RewriteRule ^(index|home)\.(php|html)?$ / [R=301,L]
