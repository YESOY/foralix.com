        <script>
          function calculateLoan() {
            const amount = parseFloat(document.getElementById("amount").value);
            const rate = parseFloat(document.getElementById("rate").value) / 100 / 12;
            const term = parseFloat(document.getElementById("term").value) * 12;

            if (isNaN(amount) || isNaN(rate) || isNaN(term)) {
              document.getElementById("result").textContent = "Please enter valid numbers.";
              return;
            }

            const payment = (amount * rate) / (1 - Math.pow(1 + rate, -term));
            document.getElementById("result").textContent = `Your estimated monthly payment is $${payment.toFixed(2)}`;
          }

          function shareWhatsApp() {
            const url = window.location.href;
            const text = "Check out this free Loan Repayment Calculator: " + url;
            const whatsappUrl = "https://wa.me/?text=" + encodeURIComponent(text);
            window.open(whatsappUrl, "_blank");
          }
        </script>
